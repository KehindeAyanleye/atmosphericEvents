<% provide(:title, 'Qoute') %> <!DOCTYPE html>

<%= simple_form_for @quote do |f| %>  
  <div class = "qouteWrapper">
	<h1 class = "large-12 columns qoute-title">
		Request a free qoute
	</h1>
	
	<p class = "qoute-title-content">
		Tell us in the following three steps what you're looking for or send an e-mail to <span>info@atmosphericevents.com.</span>
	</p>

	<div class = "qouteWrapper-page-one">
		
		<section class = "qoute-form-wrapper">
			<div class = "row">

			<div class = "qoute-form-title">
			<i class="fa fa-user"></i>
			<p>Step 1. Who are you?</p>
			</div>
				<div class="row">

				    <div class="large-6 columns">
				        <%= f.input :firstname, label: false, placeholder: "Firstname", error: "Firstname is mandatory, please specify one" %>
				    </div>

				    <div class="large-6 columns">
				        <%= f.input :surname, label: false, placeholder: "Surname", error: "Surname is mandatory, please specify one" %>
				    </div>

				</div>

				<div class="row">

				    <div class="large-6 columns">
				        <%= f.input :email, label: false, placeholder: "Email", error: "Email is mandatory, please specify one" %>
				    </div>

				    <div class="large-6 columns">
				        <%= f.input :phone, label: false, placeholder: "Phone", error: "Phone is mandatory, please specify one" %>
				    </div>

				</div>

				<div class="row">

				    <div class="large-6 columns">
				        <%= f.input :company, label: false, placeholder: "Company", error: "Company is mandatory, please specify one" %>
				    </div>

				    <div class="large-6 columns">
				        <%= f.input :location, label: false, placeholder: "Location", error: "Location is mandatory, please specify one" %>
				    </div>

				</div>

				
				<button>NEXT</button>

			</div>
		</section>
	</div>
	
	<div class = "qouteWrapper-page-two">
		
		<section class = "qoute-form-wrapper">
			<div class = "row">

			<div class = "qoute-form-title">
			<i class="fa fa-search"></i>
			<p>Step 2. What are you looking for?</p>
			</div>
					

				<div class="row">

				    <div class="large-6 columns">
					    <div class="large-12 columns">
					        <%= f.input :interest, label: false, placeholder: "What are you interested in?", error: "Please specify one" %>
					    </div>
					    <div class="large-12 columns">
					        <%= f.input :services, label: false, placeholder: "Do you need additional services?", error: "Please specify one" %>
					    </div>
					    <div class="large-12 columns">
					        <%= f.input :deadline, label: false, placeholder: "What is your deadline?", error: "Please specify one" %>
					    </div>
					    <div class="large-12 columns">
					        <%= f.input :budget, label: false, placeholder: "What is your budget?", error: "Please specify one" %>
					    </div>
					    <button><%= link_to "BACK", :back %></button>
				    </div>

				    <div class="large-6 columns">
					    <div class="large-12 columns">
					      <label>Additional information (Brief description of your event)
					        <textarea></textarea>
					      </label>
					    </div>
					    <%= f.button :submit %>
				    </div>

				</div>

				
				

			</div>
		</section>
	</div>

</div>
<% end %>