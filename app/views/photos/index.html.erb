<% provide(:title, 'Gallery') %> <!DOCTYPE html>

<div class = "moduler">

  <div class="moduler-image gallery-home-image">
  </div>

  <div class = "moduler-head">
    <div class = "row">
      <h1 class = "large-12 columns">
        OUR GALLERY
        <hr>
        <p>Here you can see a sample of projects we have worked on our years of experience to clients around the globe.</p>
      </h1>
    </div>

    <div class = "row gallery-qoute">
      <div class = "moduler-sub-head">

        <%= link_to "<button>REQUEST A FREE QUOTE</button>".html_safe, new_quote_path, :class => "large-4 columns" %>

      </div>
    </div>
  </div>


  <div class='row gallery-canvas'>
    <% @photos.each do |photo| %>
    <section class='large-6 small-12 columns'>
      <%= image_tag(photo.image_url(:large)) %>
    </section>
    <% end %>
  </div>

</div>